<section style="background-color: #f1f3f6; min-height: 100vh; padding-top: 20px;">
    <div class="container">
        <div class="d-flex align-items-center justify-content-between mb-4 bg-white p-3 shadow-sm" style="border-radius: 8px;">
            <h4 style="font-weight: 600; color: #212121; margin: 0;">Product Management</h4>
            <a href="/admin/add-product" target="_blank" class="btn text-white" style="background-color: #fb641b; border-radius: 2px; font-weight: 500; padding: 10px 24px;">
                + ADD PRODUCT
            </a>
        </div>

        <div class="table-responsive bg-white shadow-sm" style="border-radius: 8px;">
            <table class="table table-hover mb-0" style="vertical-align: middle;">
                <thead style="background-color: #f5f7fa; border-bottom: 2px solid #ebebeb;">
                    <tr style="color: #878787; font-size: 13px; text-transform: uppercase;">
                        <th class="px-4 py-3">No</th>
                        <th>Product Details</th>
                        <th>Category</th>
                        <th>Brand</th>
                        <th>Price</th>
                        <th>Preview</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody style="font-size: 14px; color: #212121;">
                    {{#each products}}
                    <tr>
                        <td class="px-4 text-muted">{{@index}}</td>
                        <td>
                            <div style="font-weight: 600; color: #2874f0;">{{this.Name}}</div>
                            <small class="text-muted" style="display: block; max-width: 200px; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">
                                {{this.Description}}
                            </small>
                        </td>
                        <td><span class="badge badge-light" style="background-color: #f0f2f5; color: #555;">{{this.Category}}</span></td>
                        <td>{{this.brand}}</td>
                        <td style="font-weight: 600;">â‚¹{{this.Price}}</td>
                        <td>
                            <img style="width: 45px; height: 45px; object-fit: contain; border: 1px solid #f0f0f0; border-radius: 4px;" 
                                 src="/public/product-images/{{this._id}}.jpg" 
                                 alt="{{this.Name}}">
                        </td>
                        <td class="text-center">
                            <div class="btn-group">
                                <a href="/admin/edit-product/{{this._id}}" class="btn btn-sm" style="color: #2874f0; font-weight: 500;">
                                    <i class="fas fa-edit"></i> Edit
                                </a>
                                <a href="/admin/delete-product/{{this._id}}" class="btn btn-sm" style="color: #ff6161; font-weight: 500;" 
                                   onclick="return confirm('Are you sure you want to delete {{this.Name}}?')">
                                    <i class="fas fa-trash"></i> Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</section>

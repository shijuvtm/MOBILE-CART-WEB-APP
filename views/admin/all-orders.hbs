<div class="container mt-4">
    <h2 class="text-center">All Orders</h2>
    <hr>

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Order ID</th>
                <th>User Name</th>
                <th>Total Amount</th>
                <th>Payment</th>
                <th>Status</th>
                <th>View</th>
            </tr>
        </thead>

        <tbody>
            {{#each orders}}
            <tr>
                <td>{{this._id}}</td>
                <td>{{this.user.Name}}</td>
                <td>Rs {{this.totalAmount}}</td>
                <td>{{this.paymentMethod}}</td>
                <td>{{this.status}}</td>
                <td>
                    <a href="/admin/order-details/{{this._id}}" class="btn btn-primary btn-sm">
                        View
                    </a>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>

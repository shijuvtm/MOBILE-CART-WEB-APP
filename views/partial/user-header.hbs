<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Mobile Store</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

    <style>
        .main-header {
            background-color: #2874f0; 
        }
        .cart-badge {
            position: absolute;
            top: -6px;
            right: -8px;
            font-size: 10px;
        }
    </style>
</head>

<body>

<header class="main-header">
    <nav class="navbar navbar-expand-lg navbar-dark container">
        
        <!-- Hamburger -->
        <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse"
            data-bs-target="#navbarMenu">
            <span class="navbar-toggler-icon"></span>
        </button>

        <!-- Logo -->
        <a class="navbar-brand fw-bolder ms-2 mr-2" href="/">MobileStore</a>

        <!-- Right Icons -->
        <div class="d-flex align-items-center ms-auto">

            <!-- Cart -->
            <a href="/cart" class="text-white position-relative me-3">
                <i class="bi bi-cart3 fs-4"></i>
                <span class="badge bg-warning text-dark cart-badge" id="cart-count">
                    {{cartCount}}
                </span>
            </a>

            <!-- Account Dropdown -->
            <div class="dropdown">
                <button class="btn btn-primary dropdown-toggle"
                    data-bs-toggle="dropdown">
                    {{#if user}}
                        {{user.Name}}
                    {{else}}
                        Account
                    {{/if}}
                </button>

                <ul class="dropdown-menu dropdown-menu-end">
                    {{#if user}}
                        <li><a class="dropdown-item" href="/orders">Orders</a></li>
                        <li><a class="dropdown-item" href="/logout">Logout</a></li>
                    {{else}}
                        <li><a class="dropdown-item" href="/login">User Login</a></li>
                    {{/if}}
                    <li><hr class="dropdown-divider"></li>
                    <li><a class="dropdown-item" href="/admin/adminLogin">Admin Login</a></li>
                </ul>
            </div>

        </div>

        <!-- Collapsible Menu -->
        <div class="collapse navbar-collapse" id="navbarMenu">
            <ul class="navbar-nav mt-3 mt-lg-0">
                <li class="nav-item">
                    <a class="nav-link fw-bold text-white" href="/">Home</a>
                </li>
            </ul>
        </div>

    </nav>
</header>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js"></script>


</body>
</html>

    <title>Mobile Cart</title>	
    </head>
<body>
<header>
    
    <nav class="navbar navbar-expand-lg navbar-light bg-dark">
        <a class="navbar-brand text-white" href="/">Mobile Cart</a>
        <button class="navbar-toggler bg-white  " type="button" data-toggle="collapse" data-target="#navbarTogglerDemo02"
            aria-controls="navbarTogglerDemo02" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarTogglerDemo02">
            <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
                <li class="nav-item active">
                    <a class="nav-link text-white" href="#">Products <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" href="/cart">Cart<span class="badge badge-success" id="cart-count">{{cartCount}}</span></a>
                </li>
                {{#if user}}
                <li class="nav-item">
                    <a class="nav-link text-white" href="/orders">Orders</a>
                </li>
                {{/if}}

            </ul>
          <div class="dropdown">
	  <button style="padding-right:40px;padding-left:20px" class="btn btn-secondary dropdown-toggle text-white" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
		{{#if user}}
            {{user.Name}}
        {{else}}
             Account
        {{/if}}
        
	  </button>
	  <ul class="dropdown-menu bg-dark" aria-labelledby="dropdownMenuButton1">
		{{#if user}}
           <li><a class="dropdown-item text-white" href="/logout">Logout</a></li>
           {{else}}
           <li><a class="dropdown-item text-white" href="/login">User Login</a></li>
           {{/if}}
           
        <li><a class="dropdown-item text-white" href="/admin/adminLogin">Admin Login</a></li>
		
	  </ul>
	</div>


</div>       
          
        
    </nav>
</header>

    

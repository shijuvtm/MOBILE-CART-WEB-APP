<script src="https://cdn.tailwindcss.com"></script>
<body class="bg-slate-50 antialiased">

  <div class="flex items-center justify-center min-h-screen p-4">
    <div class="bg-white p-8 rounded-3xl shadow-xl shadow-blue-100/50 w-full max-w-md border border-gray-100">

      <div class="mb-8">
        <h2 class="text-3xl font-bold text-gray-800 tracking-tight">Verify OTP</h2>
        <p class="text-gray-500 mt-2 text-sm">
          We sent a 6-digit code to <span class="font-semibold text-gray-900">{{Email}}</span>
        </p>
      </div>

      <form action="/reset-password" method="POST" class="space-y-6">
        <input type="hidden" name="Email" value="{{Email}}">

        {{#if error}}
        <div class="bg-red-50 border-l-4 border-red-500 p-3 rounded">
          <p class="text-red-700 text-sm font-medium">{{error}}</p>
        </div>
        {{/if}}

        <div>
          <label for="otp" class="block text-sm font-semibold text-gray-700 mb-1">Enter 6-Digit Code</label>
          <input
            id="otp"
            type="text"
            name="otp"
            maxlength="6"
            placeholder="000000"
            required
            class="w-full text-center text-2xl tracking-[0.5em] font-mono px-4 py-3 border border-gray-200 rounded-xl focus:ring-4 focus:ring-blue-100 focus:border-blue-500 outline-none transition-all duration-200"
          >
        </div>

        <div>
          <label for="newPassword" class="block text-sm font-semibold text-gray-700 mb-1">New Password</label>
          <input
            id="newPassword"
            type="password"
            name="newPassword"
            placeholder="••••••••"
            required
            class="w-full px-4 py-3 border border-gray-200 rounded-xl focus:ring-4 focus:ring-blue-100 focus:border-blue-500 outline-none transition-all duration-200"
          >
        </div>

        <button
          type="submit"
          class="w-full bg-green-600 hover:bg-green-700 text-white font-bold py-3 rounded-xl shadow-lg shadow-green-100 transition duration-300 transform active:scale-[0.98]"
        >
          Reset Password
        </button>
      </form>

      <div class="mt-8 pt-6 border-t border-gray-100 text-center">
        <p class="text-gray-500 text-sm">
          Didn't receive the code? 
          <a href="/forgot-password" class="text-blue-600 hover:underline font-semibold">Resend</a>
        </p>
      </div>
    </div>
  </div>

</body>

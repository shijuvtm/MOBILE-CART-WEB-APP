<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link rel="stylesheet"
        href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css">

    <title>Shopping Cart</title>

    <style>
        body {
            background: #f8f9fa;
        }

        .product-card {
            border-radius: 12px;
            overflow: hidden;
            border: none;
            transition: 0.3s ease;
            background: #ffffff;
            box-shadow: rgba(0, 0, 0, 0.1) 0px 4px 14px;
        }

        .product-card:hover {
            transform: translateY(-5px);
            box-shadow: rgba(0, 0, 0, 0.2) 0px 6px 20px;
        }

        .product-img {
            width: 100%;
            height: 220px;
            object-fit: contain;
            background-color: #fff;
            padding: 10px;
        }

        .price {
            font-size: 1.1rem;
            color: #e63946;
            font-weight: bold;
        }

        .btn-add {
            font-weight: 600;
            border-radius: 25px;
        }
    </style>
</head>

<body>

    <section>
        <div class="container mt-4">

            <h3 class="text-center mb-4 font-weight-bold">Available Products</h3>

            <div class="row">

                {{#each products}}
                <div class="col-lg-3 col-md-4 col-sm-6 col-12 mb-4">

                    <div class="card product-card h-100">
                        <img src="/public/product-images/{{this._id}}.jpg"
                            class="product-img"
                            alt="Product">

                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">{{this.Name}}</h5>

                            <p class="card-text text-muted" style="font-size: 0.9rem;">
                                {{this.Description}}
                            </p>

                            <p class="price">â‚¹{{this.Price}}</p>

                            <button onclick="addToCart('{{this._id}}')"
                                class="btn btn-primary mt-auto btn-add btn-block">
                                Add To Cart
                            </button>
                        </div>
                    </div>

                </div>
                {{/each}}

            </div>
        </div>
    </section>


    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js"></script>

</body>

</html>

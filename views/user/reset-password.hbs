<script src="https://cdn.tailwindcss.com"></script>
<div class="flex items-center justify-center min-h-screen p-4">
  <div class="bg-white p-8 rounded-3xl shadow-xl shadow-blue-100/50 w-full max-w-md border border-gray-100">
    <div class="mb-8">
      <h2 class="text-2xl font-bold text-gray-800 tracking-tight">Reset Password</h2>
      <p class="text-gray-500 text-sm mt-1">We've sent a code to <span class="font-bold text-gray-700">{{email}}</span></p>
    </div>

    <form action="/reset-password" method="POST" class="space-y-5">
      <input type="hidden" name="Email" value="{{Email}}">

      <div>
        <label class="block text-sm font-semibold text-gray-700 mb-1 text-center">Enter 6-Digit OTP</label>
        <input type="text" name="otp" maxlength="6" required placeholder="000000"
          class="w-full text-center text-2xl tracking-[1em] font-bold px-4 py-3 border border-gray-200 rounded-xl focus:ring-4 focus:ring-blue-100 focus:border-blue-500 outline-none transition-all duration-200">
      </div>

      <div>
        <label class="block text-sm font-semibold text-gray-700 mb-1">New Password</label>
        <input type="password" name="newPassword" required placeholder="••••••••"
          class="w-full px-4 py-3 border border-gray-200 rounded-xl focus:ring-4 focus:ring-blue-100 focus:border-blue-500 outline-none transition-all duration-200">
      </div>

      <button type="submit" class="w-full bg-green-600 hover:bg-green-700 text-white font-bold py-3 rounded-xl shadow-lg shadow-green-100 transition duration-300">
        Update Password
      </button>
    </form>
  </div>
</div>
